[Unit]
Description=Jenkins
After=network.target
Requires=network.target

[Service]
Type=simple
EnvironmentFile={{ jenkins_home_folder }}/jenkins.conf
ExecStart=/usr/bin/java ${JENKINS_JAVA_OPTIONS} -jar {{ jenkins_home_folder }}/jenkins.war --httpPort=${JENKINS_PORT} --httpListenAddress=${JENKINS_LISTEN_ADDRESS} ${JENKINS_ARGS}
Restart=always
User={{ jenkins_user }}
RestartSec=20

[Install]
WantedBy=multi-user.target